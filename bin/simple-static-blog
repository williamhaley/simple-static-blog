#!/usr/bin/env node

/* eslint-disable no-undef */
/* eslint-disable @typescript-eslint/no-var-requires */

const yargs = require('yargs');

const argv = yargs
  .usage(
    'Usage: $0 --source [string] --destination [string] --title string --rootURL string --templates string [--watch,--serve, --port number]',
  )
  .demandOption('source')
  .demandOption('destination')
  .demandOption('templates')
  .demandOption('title')
  .demandOption('rootURL')
  .boolean('watch')
  .boolean('serve')
  .number('port')
  .help()
  .alias('help', 'h').argv;

require = require('esm')(module /*, options*/);
const generator = require('../dist/index').default;

generator(
  argv.source,
  argv.destination,
  argv.templates,
  argv.title,
  argv.rootURL,
  argv.watch,
  argv.serve,
  argv.port,
);
